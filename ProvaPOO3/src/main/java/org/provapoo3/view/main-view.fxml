<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.provapoo3.controller.MainController"
      spacing="10">
    <padding>
        <Insets top="12" right="12" bottom="12" left="12"/>
    </padding>

    <Label text="CADASTRO DE MEDICAMENTOS" style="-fx-font-size: 26; -fx-font-weight: bold;" />

    <HBox spacing="16">
        <TitledPane text="MEDICAMENTO" collapsible="false">
            <content>
                <GridPane hgap="8" vgap="8">
                    <padding>
                        <Insets top="8" right="8" bottom="8" left="8"/>
                    </padding>
                    <columnConstraints>
                        <ColumnConstraints minWidth="100"/>
                        <ColumnConstraints minWidth="220"/>
                    </columnConstraints>

                    <Label text="Código" GridPane.rowIndex="0" />
                    <TextField fx:id="txtCodigo" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                    <Label text="Nome" GridPane.rowIndex="1" />
                    <TextField fx:id="txtNome" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Descrição" GridPane.rowIndex="2" />
                    <TextField fx:id="txtDescricao" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Princípio Ativo" GridPane.rowIndex="3" />
                    <TextField fx:id="txtPrincipio" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Validade" GridPane.rowIndex="4" />
                    <DatePicker fx:id="dateValidade" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Label text="Quantidade" GridPane.rowIndex="5" />
                    <TextField fx:id="txtQuantidade" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                    <Label text="Preço" GridPane.rowIndex="6" />
                    <TextField fx:id="txtPreco" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                    <Label text="Controlado" GridPane.rowIndex="7" />
                    <CheckBox fx:id="chkControlado" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
                </GridPane>
            </content>
        </TitledPane>

        <TitledPane text="FORNECEDOR" collapsible="false">
            <content>
                <GridPane hgap="8" vgap="8">
                    <padding>
                        <Insets top="8" right="8" bottom="8" left="8"/>
                    </padding>
                    <columnConstraints>
                        <ColumnConstraints minWidth="90"/>
                        <ColumnConstraints minWidth="220"/>
                    </columnConstraints>

                    <Label text="CNPJ" GridPane.rowIndex="0" />
                    <TextField fx:id="txtCnpj" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Razão Social" GridPane.rowIndex="1" />
                    <TextField fx:id="txtRazao" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Telefone" GridPane.rowIndex="2" />
                    <TextField fx:id="txtTelefone" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="E-mail" GridPane.rowIndex="3" />
                    <TextField fx:id="txtEmail" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Cidade" GridPane.rowIndex="4" />
                    <TextField fx:id="txtCidade" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Label text="Estado" GridPane.rowIndex="5" />
                    <TextField fx:id="txtEstado" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                </GridPane>
            </content>
        </TitledPane>

        <VBox spacing="8" alignment="TOP_CENTER">
            <Button text="Salvar" onAction="#onSalvar" prefWidth="180"/>
            <Button text="Buscar por Código" onAction="#onBuscar" prefWidth="180"/>
            <Button text="Excluir por Código" onAction="#onExcluir" prefWidth="180"/>
            <Button text="Listar Todos" onAction="#onListar" prefWidth="180"/>
        </VBox>
    </HBox>

    <!-- BLOCO DE RELATÓRIOS -->
    <HBox spacing="8">
        <TitledPane text="RELATÓRIOS (Stream API)" collapsible="false">
            <content>
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Button text="Próximos 30 dias" onAction="#onRelProximos30"/>
                    <Button text="Estoque baixo (&lt; 5)" onAction="#onRelEstoqueBaixo"/>
                    <Button text="Valor total por fornecedor" onAction="#onRelValorTotalPorFornecedor"/>
                    <Button text="Controlados" onAction="#onRelControlados"/>
                    <Button text="Não controlados" onAction="#onRelNaoControlados"/>
                </HBox>
            </content>
        </TitledPane>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Limpar relatório / Listar Todos" onAction="#onListar"/>
    </HBox>

    <Label text="LISTA DE MEDICAMENTOS" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    <TableView fx:id="tblMedicamentos" prefHeight="260">
        <columns>
            <TableColumn fx:id="colCodigo"     text="Código"         prefWidth="100"/>
            <TableColumn fx:id="colNome"       text="Nome"           prefWidth="160"/>
            <TableColumn fx:id="colPrincipio"  text="Princípio Ativo" prefWidth="160"/>
            <TableColumn fx:id="colValidade"   text="Validade"       prefWidth="110"/>
            <TableColumn fx:id="colQtd"        text="Qtd"            prefWidth="70"/>
            <TableColumn fx:id="colPreco"      text="Preço"          prefWidth="100"/>
            <TableColumn fx:id="colControlado" text="Controlado"     prefWidth="90"/>
            <TableColumn fx:id="colFornecedor" text="Fornecedor"     prefWidth="160"/>
        </columns>
    </TableView>

    <Label text="LISTA DE FORNECEDORES" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    <TableView fx:id="tblFornecedores" prefHeight="200">
        <columns>
            <TableColumn fx:id="colFCnpj"     text="CNPJ"         prefWidth="150"/>
            <TableColumn fx:id="colFRazao"    text="Razão Social" prefWidth="200"/>
            <TableColumn fx:id="colFTelefone" text="Telefone"     prefWidth="130"/>
            <TableColumn fx:id="colFEmail"    text="Email"        prefWidth="220"/>
            <TableColumn fx:id="colFCidade"   text="Cidade"       prefWidth="140"/>
            <TableColumn fx:id="colFEstado"   text="Estado"       prefWidth="80"/>
        </columns>
    </TableView>

</VBox>
